    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "backend/cmd/api/main.go",
            "env": {
                "DB_USERNAME": "climblive",
                "DB_PASSWORD": "secretpassword",
                "DB_HOST": "localhost",
                "DB_DATABASE": "climblive",
            }
        },
        {
            "name": "Scorecard",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm i && pnpm build && pnpm run dev",
            "cwd": "${workspaceFolder}/web/scorecard",
        },
        {
            "name": "Scoreboard",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm i && pnpm build && pnpm run dev",
            "cwd": "${workspaceFolder}/web/scoreboard",
        },
        {
            "name": "Simulator",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "backend/cmd/simulator/main.go"
        }
    ]
}