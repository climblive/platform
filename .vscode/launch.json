{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "backend/cmd/api/main.go",
      "buildFlags": ["-race"],
      "env": {
        "DB_USERNAME": "climblive",
        "DB_PASSWORD": "secretpassword",
        "DB_HOST": "localhost",
        "DB_PORT": "3306",
        "DB_DATABASE": "climblive",
        "SCORE_ENGINE_MAX_LIFETIME": "600"
      }
    },
    {
      "name": "Scorecard",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm i && pnpm run dev --port 5173",
      "cwd": "${workspaceFolder}/web/scorecard"
    },
    {
      "name": "Scoreboard",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm i && pnpm run dev --port 5174",
      "cwd": "${workspaceFolder}/web/scoreboard"
    },
    {
      "name": "Admin",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm i && pnpm run dev --port 5175",
      "cwd": "${workspaceFolder}/web/admin"
    },
    {
      "name": "WWW",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm i && pnpm run dev --port 5176",
      "cwd": "${workspaceFolder}/web/www"
    },
    {
      "name": "Simulator",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "backend/cmd/simulator/main.go"
    }
  ],
  "compounds": [
    {
      "name": "Service",
      "configurations": ["Backend", "Scorecard", "Scoreboard", "Admin", "WWW"],
      "stopAll": false
    }
  ]
}
